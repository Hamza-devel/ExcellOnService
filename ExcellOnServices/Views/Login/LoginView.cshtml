@model ExcellOnServices.Models.LoginMod

@{
    ViewBag.Title = "LoginView";
    Layout = "~/Views/Shared/SignUpLayout.cshtml";
}

<style>
    .selectsss {
        width: 100%;
        height: 44px;
    }
</style>

<div class="bg-page py-5">
    <div class="container">
        <!-- main-heading -->
        <h2 class="main-title-w3layouts mb-2 text-center text-white" style="font-family:Georgia">Login Form</h2>
        <!--// main-heading -->
        <div class="signUpParent">
            <div class="form-body-w3-agile text-center w-lg-50 w-sm-75 w-100 mx-auto mt-5">
                <form action="Dashboard" method="post">

                
                    <div class="form-group textLeft">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-8 textLeft", required = "required" })
                        <div class="col-md-16">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control textLeft", required = "required", placeholder = "Enter Email Address", Type = "Email" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group textLeft">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-8 textLeft", required = "required" })
                        <div class="col-md-16">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control textLeft", required = "required", placeholder = " Enter Password", Type = "Password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", required = "required" })
                        </div>
                    </div>

                    <div class="form-group textLeft col-md-16">
                        @Html.LabelFor(model => model.Role, htmlAttributes: new { @class = "control-label col-md-8 textLeft", required = "required" })
                        <div class="form-group col-md-16">
                            @Html.DropDownListFor(model => model.Role, (IEnumerable<SelectListItem>)TempData["abc"], new { @class = "form-control selectSignUp", required = "required", placeholder = "Select" })
                            @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger", required = "required" })
                        </div>
                    </div>




                    <button type="submit" class="btn btn-primary error-w3l-btn mt-sm-5 mt-3 px-4">Login</button>

                </form>
                <div style=" display: flex;
    justify-content: space-between;
    align-items: baseline;
    width: 62%;
    margin-right: auto;
    margin-left: auto; " >
                    <p class="paragraph-agileits-w3layouts mt-4">
                        Don't have an account?
                        </p>
                    <p> <a>@Html.ActionLink("Sign up", "SignUpView", "SignUp", null, new { @class = "dropdown-item mt-3" })</a> </p>
                   
                </div>
               
            </div>
        </div>

        <!-- Copyright -->
        <div class="copyright-w3layouts py-xl-3 py-2 mt-xl-5 mt-4 text-center">
            <p>
                © 2019 Excell On Services . All Rights Reserved

            </p>
        </div>
        <!--// Copyright -->
    </div>
</div>


<!-- Required common Js -->
<script src='~/Content/js/jquery-2.2.3.min.js'></script>
<!-- //Required common Js -->
<!-- Js for bootstrap working-->
<script src="~/Content/js/bootstrap.min.js"></script>
